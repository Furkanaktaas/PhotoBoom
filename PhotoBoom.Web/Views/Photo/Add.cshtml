@model PhotoModel
@{
    ViewData["Title"] = "Photo-Add";
}
<div class="row">
    <div class="col-lg-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Photo" asp-action="Add" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" id="title" type="text" class="form-control" />
            <div class="form-group">
                <label asp-for="Tag">Tag</label>
                <input asp-for="Tag" id="tag" placeholder="tag1, tag2, tag3" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="File" id="file" type="file" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input id="addPhoto" type="submit" value="Add Photo" />
            </div>
        </form>
    </div>
</div>
